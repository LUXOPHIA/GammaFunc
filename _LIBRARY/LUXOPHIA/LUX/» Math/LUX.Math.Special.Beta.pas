function LnBeta( const X_,Y_:Single ) :Single;
begin
     Result := LnGammaP( X_ ) + LnGammaP( Y_ ) - LnGammaP( X_ + Y_ );
end;

function LnBeta( const X_,Y_:Double ) :Double;
begin
     Result := LnGammaP( X_ ) + LnGammaP( Y_ ) - LnGammaP( X_ + Y_ );
end;

