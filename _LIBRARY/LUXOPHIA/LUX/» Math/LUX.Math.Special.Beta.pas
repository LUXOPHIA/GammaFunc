function Beta( const X_,Y_:Single ) :Single;
begin
     Result := Exp( LnBeta( X_, Y_ ) );
end;

function Beta( const X_,Y_:Double ) :Double;
begin
     Result := Exp( LnBeta( X_, Y_ ) );
end;

