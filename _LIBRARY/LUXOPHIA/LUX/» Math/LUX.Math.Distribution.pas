function DistriT( const X_:Single; const N_:Cardinal ) :Single;
begin
     Result := Power( 1 + Pow2( X_ ) / N_, -( N_ + 1 ) / 2 )
             / ( Roo2( N_ ) * Beta( N_ / 2, 0.5 ) );
end;

function DistriT( const X_:Double; const N_:Cardinal ) :Double;
begin
     Result := Power( 1 + Pow2( X_ ) / N_, -( N_ + 1 ) / 2 )
             / ( Roo2( N_ ) * Beta( N_ / 2, 0.5 ) );
end;

